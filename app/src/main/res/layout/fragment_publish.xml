<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Publish"><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Publish">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Publish Blog" />

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_below="@id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:background="@drawable/light_bg"
        android:backgroundTint="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/stroke_bg"
            app:cardCornerRadius="18dp">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:scaleType="centerCrop"

                android:visibility="invisible"
                tools:src="@tools:sample/backgrounds/scenic" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="217dp"
                android:background="@drawable/stroke_bg" />

            <TextView
                android:id="@+id/b_select_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="select an image"
                android:textColor="@color/black"
                android:textSize="21sp" />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/b_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@drawable/light_bg"
            android:inputType="text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:hint="Title"/>

        <EditText
            android:id="@+id/b_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/light_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Description"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/b_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/light_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Author Name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/btn_publish"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/light_bg"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="PUBLISH" />

    </LinearLayout>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>